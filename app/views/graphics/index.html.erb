<% options1 = {
  #title: 'Quantidade de blox por: ',
  #subtitle: 'Curso',
  xtitle: 'Periodo',
  ytitle: 'Blox',
  width: 1200,
  theme: 'palette8',
  stacked: true
} %>

<div id="hidden_div1", style="display: inline-block; width: 48%; display: block;">
<%# <p> Quantidade de blox no 1.CICLO: 
  <%= select_tag(:cycle_id, 
  raw('<option value="1">1.Ciclo</option><option value="2">2.Ciclo</option>')) 
  %>
<%# </p> %>
<%= column_chart(range_bar_ciclo1, {**options1, }) %>
</div>

<script>
    function showDiv(){
        getSelectValue = document.getElementById("test").value;
        if(getSelectValue == "1"){
            document.getElementById("hidden_div1").style.display="none";
        }else{
            document.getElementById("hidden_div1").style.display="block";
        }
    }
</script>


